<resources>
    <declare-styleable name="SpaceTabLayout">
        <attr name="number_of_tabs">
            <enum name="three" value="3" />
            <enum name="four" value="4" />
            <enum name="five" value="5" />
            <enum name="three_IconOnly" value="0" />
        </attr>

        <attr name="starting_position">
            <enum name="one" value="0" />
            <enum name="two" value="1" />
            <enum name="three" value="2" />
            <enum name="four" value="3" />
            <enum name="five" value="4" />
        </attr>

        <attr name="tab_color" format="color" />
        <attr name="button_color" format="color" />
        <attr name="text_color" format="color" />

        <attr name="icon_one" format="reference" />
        <attr name="icon_two" format="reference" />
        <attr name="icon_three" format="reference" />
        <attr name="icon_four" format="reference" />
        <attr name="icon_five" format="reference" />

        <attr name="text_one" format="string" />
        <attr name="text_two" format="string" />
        <attr name="text_three" format="string" />
    </declare-styleable>

    <declare-styleable name="Rotate3dAnimation">
        <attr name="rollType" format="enum">
            <enum name="x" value="0" />
            <enum name="y" value="1" />
            <enum name="z" value="2" />
        </attr>
        <attr name="fromDeg" format="float" />
        <attr name="toDeg" format="float" />
        <attr name="pivotX" format="fraction" />
        <attr name="pivotY" format="fraction" />
    </declare-styleable>

    <declare-styleable name="MaskEditText">
        <attr name="mask" format="string" />
    </declare-styleable>

    <attr name="sweet_alert_bg_drawable" format="reference" />
    <attr name="sweet_alert_title_text_color" format="color|reference" />
    <attr name="sweet_alert_content_text_color" format="color|reference" />

    <declare-styleable name="PDFViewPager">
        <attr name="assetFileName" format="string" /> <!-- Load PDF from Asset -->
        <attr name="pdfUrl" format="string" /> <!-- Load PDF from remote URL -->
        <attr name="scale" format="float" /> <!-- Set initial scale for PDF -->
    </declare-styleable>

</resources>